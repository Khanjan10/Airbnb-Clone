<% layout("/layouts/boilerplate") %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>"
    const listing = <%- JSON.stringify(listing) %>
</script>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <h2 class="listing-title text-center"> <%= listing.title %> </h2>
            </div>
            <div class="card-info">

                <img src="<%= listing.image.url %>" class="card-info-img show-img" alt="Listing_Image">

                <div class="card col-12 col-md-6 mt-4 listing-card">
                    <div class="card-body mt-4">
                        <p class="card-text">
                            <b>Description: </b><%= listing.description %> <br>
                            <b>Price: </b>&#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                            <b>City: </b><%= listing.location %> <br>
                            <b>Country: </b><%= listing.country %> <br>
                            <br>
                            <b>Owned By: </b><i><%= listing.owner.username %></i> 
                        </p>
                    </div> 
                    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                    <div class="row mt-4 mb-5 gx-2">
                        <div class="col-auto">
                            <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark">Edit</a>
                        </div>
                        <div class="col-auto">
                            <form method="post" action="/listings/<%= listing._id%>?_method=DELETE">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                <% } %>  
                </div>
            </div>
                
            <!-- Rating -->
            <div class="col-12 mt-5 mb-5">
                <% if(currUser) { %>
                <hr>
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1s" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please add some comments</div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <% } %>
            </div>

            <% if(listing.reviews.length > 0) { %>
            <div class="col-12">
                <hr>
                <h4><b>All Reviews</b></h4>
                <div class="row">
                    <% for(review of listing.reviews) { %>
                        <div class="card col-12 col-md-5 m-2 p-3 review-card">
                            <div class="card-body">
                                <h5 class="card-title">@  <b><%= review.author.username %></b></h5> <br>
                                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                                <p class="card-text"> <%= review.comment %> </p>
                                <form method="post" action="/listings/<%=listing._id%>/reviews/<%= review._id %>?_method=DELETE">
                                    <button class="btn btn-danger btn-sm">Delete Review</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            <% } %>

            <div class="col-12 mt-5 mb-5">
                <h3>Where you'll be:</h3>
                <div id="map" class="row justify-content-center"></div>
            </div>
        </div>
    </div>

    <script src="/js/map.js"></script>
</body>
