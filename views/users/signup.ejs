<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <h1 class="text-center mb-4">Sign Up on WanderStay</h1>

      <form action="/signup" method="post" class="needs-validation text-start" novalidate>
        <div class="mb-4">
          <!-- <label for="username" class="form-label">Enter Username</label> -->
          <input name="username" id="username" type="text" class="form-control" placeholder="Enter Username" required>
        </div>

        <div class="mb-4">
          <!-- <label for="email" class="form-label">Enter Email</label> -->
          <input name="email" id="email" type="email" class="form-control" placeholder="Enter Email" required>
        </div>

        <div class="mb-4">
          <!-- <label for="password" class="form-label">Enter Password</label> -->
          <input name="password" id="password" type="password" class="form-control" placeholder="Enter Password" required>
        </div>

        <div class="d-grid">
          <button class="btn sign-up-btn">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>
